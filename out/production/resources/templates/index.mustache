{{>layout/header}}

    <h1>Wap 2조</h1>
    <div class="col-md-12">
        <div class="row">
            <div class=col-md-6"></div>
            <div class=col-md-6">
                <a href="/posts/save" role="button" class="btn btn-Secondary">글 쓰기</a>
                {{#userName}}
                        Logged in as: <span id="user">{{userName}}</span>
                        <a href="/logout" role="button" class="btn btn-dark">로그 아웃</a>
                {{/userName}}
                {{^userName}}
                        <a href="/oauth2/authorization/google" role="button" class="btn btn-primary">구글 로그인</a>
                {{/userName}}
                {{^userName}}
                    <a href="/oauth2/authorization/naver" role="button" class="btn btn-success">네이버 로그인</a>
                {{/userName}}
            </div>
        </div>
    </div>
    <br>

<div class="col-md-10">
<table class="table table-horizontal table-bordered">
    <thead class="thead-dark">
    <tr>
        <th class="col-md-1">번호</th>
        <th class="col-md-6">제목</th>
        <th class="col-md-1">작성자</th>
        <th class="col-md-2">작성일</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#posts}}
        <tr>
            <td class="col-md-1">{{id}}</td>
            <td class="col-md-6"><a href="/posts/comments/{{id}}">{{title}}</a>[ ]</td>
            <td class="col-md-1">{{author}}</td>
            <td class="col-md-2">{{modifiedDate}}</td>
        </tr>
    {{/posts}}
    </tbody>
</table>
</div>
{{>layout/footer}}

