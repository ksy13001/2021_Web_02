<!-- 첫화면 -->
{{>layout/header}}  <!--현재 머스테치 파일 기준으로 다른파일 불러옴-->

    <h1>Wap 2조</h1>
    <div class="col-md-12">
        <div class="row">
            <div class=col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>    <!--posts-save.mustache-->
                {{#userName}}
                        Logged in as: <span id="user">{{userName}}</span>
                        <a href="/logout" role="button" class="btn btn-info active">로그 아웃</a>
                {{/userName}}
                {{^userName}}
                        <a href="/oauth2/authorization/google" role="button" class="btn btn-success active">구글 로그인</a>
                {{/userName}}
                {{^userName}}
                    <a href="/oauth2/authorization/naver" role="button" class="btn btn-secondary active">네이버 로그인</a>
                {{/userName}}
            </div>
        </div>
    </div>
    <br>


<!-- 목록 출력 -->
<table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
        <th>게시글번호</th>
        <th>제목</th>
        <th>작성자</th>
        <th>최종수정일</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#posts}}          <!--for 문, posts 리스트 순회-->
        <tr>
            <td>{{id}}</td>
            <td><a href="/posts/update/{{id}}">{{title}}</a></td>       <!-- 타이틀 클릭시 게시글 수정화면 이동-->
            <td>{{author}}</td>
            <td>{{modifiedDate}}</td>
        </tr>
    {{/posts}}
    </tbody>
</table>

{{>layout/footer}}

